.overlay
  z-index 20000
  position fixed
  pointer-events none
  top 0
  right 0
  bottom 0
  left 0
  padding-top 55px
  background-color rgba(0, 0, 0, 0)
  transition background-color 0.18s

  .alert-gateway
    min-height 50px
    margin-bottom 30px

  .noscroll &
    pointer-events auto
    background-color rgba(0, 0, 0, 0.55)
