.alert-container
  min-height 68px
  display flex
  flex-direction column
  justify-content flex-end
  position fixed
  top 49px
  left 0
  right 0
  width 320px
  z-index 20000
  margin 0 auto

.alert
  overflow hidden
  max-width 80vw
  line-height 20px
  color #fff
  text-align center
  display flex
  align-items center
  padding 14px 0
  border-radius 6px
  box-shadow 0 0 50px rgba(0, 0, 0, 0.25)

  &.alert-enter,
  &.alert-appear,
  &.alert-leave.alert-leave-active
    opacity 0.01
    transform scale(0.92)

  &.alert-enter.alert-enter-active,
  &.alert-appear.alert-appear-active,
  &.alert-leave
    opacity 1
    transform scale(1)

  &.alert-leave.alert-leave-active
    transition opacity 0.15s, transform 0.15s
    transition-timing-function linear

  &.alert-appear.alert-appear-active,
  &.alert-enter.alert-enter-active
    transition opacity 0.25s, transform 0.15s
    transition-timing-function cubic-bezier(0.1, 0.23, 0.71, 1.65)

  &.warning
    background radial-gradient(circle at top right, #ffa648, #ff7f1b)

  &.danger
    background radial-gradient(circle at top right, #f06565, #f43636)

  &.success
    background radial-gradient(circle at top right, #a6d659, #37b645)

  &.info
    background radial-gradient(circle at top right, #36c7f4, #6593f0)

  .alert-text
    flex 1
    padding 0 15px 0 10px

  &.dismissable-alert .alert-text
    // The left padding is so large to account for the space taken up
    // by the `dismiss` icon.
    margin-left 20px

  .alert-icon
    flex 0 0 14px
    margin-left 15px

  .alert-dismiss
    margin 0 15px 0 auto
