*
  box-sizing border-box

html
  // This keeps the scrollbar from appearing and disappearing as the user
  // navigates between pages â€“ it's always around.
  overflow-y scroll

html, body
  margin 0
  padding 0

body
  // This is the size of the header
  padding-top 46px
  min-height 100vh
  overflow-x hidden

.container
  max-width $appWidth
  margin 0 auto

.padded-container
  content-padding()

.content-container
  display flex
  flex-direction column
  // 45px for the fixed position header
  min-height calc(100vh - 46px)

main
  margin-bottom 40px
  flex 1
